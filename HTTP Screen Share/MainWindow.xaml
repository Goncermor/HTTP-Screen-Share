<Window
    x:Class="HTTP_Screen_Share.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HTTP_Screen_Share"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HTTP Screen Share"
    Width="500"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        
        
        <Button Height="20" Margin="20,0,0,20" VerticalAlignment="Bottom" Content="Settings" HorizontalAlignment="Left" Width="60" />
        <Button x:Name="ServerStartButton" Width="75" Height="20" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Start Server" Click="ServerStartButton_Click" />
        <Label x:Name="label" Content="HTTP Screen Share" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="205" FontSize="20"/>
        <StackPanel  Margin="20,52,20,55">
            <TextBlock x:Name="URL"><Hyperlink NavigateUri="https://goncermor.com"></Hyperlink></TextBlock>
        </StackPanel>
    </Grid>

</Window>
